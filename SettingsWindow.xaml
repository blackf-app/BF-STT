<Window x:Class="BF_STT.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BF_STT"
        mc:Ignorable="d"
        Title="Settings"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Background="Transparent"
        AllowsTransparency="True">
    
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderThickness="1" 
                                BorderBrush="#444444">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444444"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <ControlTemplate x:Key="ModernComboBoxToggleButton" TargetType="ToggleButton">
            <Border x:Name="Border" CornerRadius="4" BorderThickness="1" BorderBrush="#3A3A3C" Background="#252526">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="20" />
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="1" Background="Transparent">
                        <Path x:Name="Arrow" Fill="#AAAAAA" HorizontalAlignment="Center" VerticalAlignment="Center" Data="M0,0 L3.5,4 L7,0 Z"/>
                    </Border>
                </Grid>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="Border" Property="Background" Value="#2D2D30" />
                    <Setter TargetName="Border" Property="BorderBrush" Value="#4A4A4C" />
                    <Setter TargetName="Arrow" Property="Fill" Value="White" />
                </Trigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter TargetName="Border" Property="Background" Value="#2D2D30" />
                    <Setter TargetName="Border" Property="BorderBrush" Value="#007ACC" />
                    <Setter TargetName="Arrow" Property="Fill" Value="#007ACC" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#252526" />
            <Setter Property="BorderBrush" Value="#3A3A3C" />
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Padding" Value="8,0,0,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="#252526"/>
                        <Setter Property="Foreground" Value="#CCCCCC"/>
                        <Setter Property="Padding" Value="8,4"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}" Margin="2,1">
                                        <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#333333"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#007ACC"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" Template="{StaticResource ModernComboBoxToggleButton}"
                                          Grid.Column="2" Focusable="false"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press"/>
                            <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="8,0,20,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Fade">
                                <Border x:Name="DropDownBorder" MaxHeight="200" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ComboBox}}" Background="#252526" BorderThickness="1" BorderBrush="#3A3A3C" CornerRadius="4" Margin="0,4,0,0">
                                    <ScrollViewer Margin="2" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TabControl Style -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style TargetType="TabItem">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="TabBorder" Background="{TemplateBinding Background}" 
                                CornerRadius="8,8,0,0" Padding="{TemplateBinding Padding}" Margin="0,0,2,0">
                            <ContentPresenter ContentSource="Header" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="TabBorder" Property="Background" Value="#333333"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TabBorder" Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#1E1E1E" 
            CornerRadius="12" 
            BorderThickness="1" 
            BorderBrush="#333333" 
            MouseLeftButtonDown="Window_MouseLeftButtonDown">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="10,5,10,15">
                <TextBlock Text="Settings" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                <Button Width="32" 
                        Height="32" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center" 
                        ToolTip="Má»Ÿ thÆ° má»¥c chá»©a file cáº¥u hÃ¬nh"
                        Background="#333333"
                        Click="OpenConfigFolderButton_Click">
                    <TextBlock Text="ðŸ“‚" FontSize="16" Margin="0,-2,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
            </Grid>

            <!-- TabControl -->
            <TabControl Grid.Row="1" Margin="0,0,0,15">
                <!-- General Tab -->
                <TabItem Header="âš™ General">
                    <Border Background="#333333" CornerRadius="0,8,8,8" Padding="20,15">
                        <StackPanel Width="330">
                            <!-- Mic and Hotkeys -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="75"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="75"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Microphone" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,6" FontWeight="SemiBold"/>
                                    <ComboBox x:Name="MicrophoneComboBox" Height="30" />
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Hotkey" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,6" FontWeight="SemiBold"/>
                                    <ComboBox x:Name="HotkeyComboBox" Height="30" />
                                </StackPanel>
                                <StackPanel Grid.Column="4">
                                    <TextBlock Text="Stop &amp; Send" Foreground="#AAAAAA" FontSize="11" Margin="0,0,0,7" FontWeight="SemiBold" ToolTip="Stop &amp; Send Hotkey"/>
                                    <ComboBox x:Name="StopAndSendHotkeyComboBox" Height="30" />
                                </StackPanel>
                            </Grid>

                            <!-- Language and History -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Language" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,6" FontWeight="SemiBold"/>
                                    <ComboBox x:Name="LanguageComboBox" Height="30">
                                        <ComboBoxItem Content="vi" Tag="vi"/>
                                        <ComboBoxItem Content="en" Tag="en"/>
                                        <ComboBoxItem Content="ja" Tag="ja"/>
                                        <ComboBoxItem Content="ko" Tag="ko"/>
                                        <ComboBoxItem Content="zh" Tag="zh"/>
                                        <ComboBoxItem Content="fr" Tag="fr"/>
                                        <ComboBoxItem Content="de" Tag="de"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="History Limit" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,6" FontWeight="SemiBold"/>
                                    <TextBox x:Name="MaxHistoryLimitTextBox" Height="30" Width="Auto" Padding="5,2" VerticalContentAlignment="Center"/>
                                </StackPanel>
                            </Grid>

                            <!-- Checkboxes -->
                            <CheckBox x:Name="TestModeCheckBox" 
                                      Content="Test Mode (Run both APIs simultaneously)" 
                                      Margin="0,0,0,8"/>
                            <CheckBox x:Name="AutoCheckUpdateCheckBox" 
                                      Content="Tá»± Ä‘á»™ng kiá»ƒm tra phiÃªn báº£n má»›i" 
                                      Margin="0,0,0,8"/>
                            <CheckBox x:Name="NoiseSuppressionCheckBox" 
                                      Content="Noise Suppression (RNNoise)" 
                                      Margin="0,0,0,8"/>
                            <CheckBox x:Name="StartWithWindowsCheckBox" 
                                      Content="Start with Windows" 
                                      Margin="0"/>
                        </StackPanel>
                    </Border>
                </TabItem>

                <!-- API Keys Tab -->
                <TabItem Header="ðŸ”‘ API Keys">
                    <Border Background="#333333" CornerRadius="0,8,8,8" Padding="20,15">
                        <Grid Width="330">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Row 0: Deepgram | Speechmatics -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,10">
                                <TextBlock Text="Deepgram" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,4" FontWeight="SemiBold"/>
                                <TextBox x:Name="ApiKeyTextBox" FontSize="11" Padding="6"/>
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,10">
                                <TextBlock Text="Speechmatics" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,4" FontWeight="SemiBold"/>
                                <TextBox x:Name="SpeechmaticsApiKeyTextBox" FontSize="11" Padding="6"/>
                            </StackPanel>

                            <!-- Row 1: Soniox | OpenAI -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,10">
                                <TextBlock Text="Soniox" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,4" FontWeight="SemiBold"/>
                                <TextBox x:Name="SonioxApiKeyTextBox" FontSize="11" Padding="6"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,10">
                                <TextBlock Text="OpenAI" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,4" FontWeight="SemiBold"/>
                                <TextBox x:Name="OpenAIApiKeyTextBox" FontSize="11" Padding="6"/>
                            </StackPanel>

                            <!-- Row 2: ElevenLabs | Google -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,10">
                                <TextBlock Text="ElevenLabs" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,4" FontWeight="SemiBold"/>
                                <TextBox x:Name="ElevenLabsApiKeyTextBox" FontSize="11" Padding="6"/>
                            </StackPanel>
                            <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,0,10">
                                <TextBlock Text="Google" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,4" FontWeight="SemiBold"/>
                                <TextBox x:Name="GoogleApiKeyTextBox" FontSize="11" Padding="6"/>
                            </StackPanel>

                            <!-- Row 3: AssemblyAI | Azure -->
                            <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,0,10">
                                <TextBlock Text="AssemblyAI" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,4" FontWeight="SemiBold"/>
                                <TextBox x:Name="AssemblyAIApiKeyTextBox" FontSize="11" Padding="6"/>
                            </StackPanel>
                            <StackPanel Grid.Row="3" Grid.Column="2" Margin="0,0,0,10">
                                <TextBlock Text="Azure Key" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,4" FontWeight="SemiBold"/>
                                <TextBox x:Name="AzureApiKeyTextBox" FontSize="11" Padding="6"/>
                            </StackPanel>

                            <!-- Row 4: Azure Region (spans right column only) -->
                            <StackPanel Grid.Row="4" Grid.Column="2" Margin="0,0,0,0">
                                <TextBlock Text="Azure Region" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,4" FontWeight="SemiBold"/>
                                <TextBox x:Name="AzureRegionTextBox" FontSize="11" Padding="6" ToolTip="Region (e.g. eastus)"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </TabItem>
            </TabControl>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Button Content="Save" 
                        Click="SaveButton_Click" 
                        Width="140" 
                        Height="45" 
                        Background="#007ACC" 
                        Margin="0,0,15,0"/>
                <Button Content="Cancel" 
                        Click="CancelButton_Click" 
                        Width="140" 
                        Height="45"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
