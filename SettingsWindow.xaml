<Window x:Class="BF_STT.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BF_STT"
        mc:Ignorable="d"
        Title="Settings"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Background="Transparent"
        AllowsTransparency="True">
    
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderThickness="1" 
                                BorderBrush="#444444">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444444"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#1E1E1E" 
            CornerRadius="12" 
            BorderThickness="1" 
            BorderBrush="#333333" 
            MouseLeftButtonDown="Window_MouseLeftButtonDown">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="Settings" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       Margin="0,0,0,25"
                       HorizontalAlignment="Center"/>

            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                <TextBlock Text="Default API" 
                           Foreground="#888888" 
                           FontSize="12" 
                           Margin="0,0,0,6" 
                           FontWeight="SemiBold"/>
                <ComboBox x:Name="SelectedApiComboBox" Width="320" Height="30" FontSize="14" Padding="5" 
                          Background="#333333" Foreground="Black" BorderThickness="1" BorderBrush="#444444">
                    <ComboBoxItem Content="Deepgram"/>
                    <ComboBoxItem Content="Speechmatics"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,0,0,10">
                <TextBlock Text="Deepgram API Key" 
                           Foreground="#888888" 
                           FontSize="12" 
                           Margin="0,0,0,6" 
                           FontWeight="SemiBold"/>
                <TextBox x:Name="ApiKeyTextBox" Width="320"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Margin="0,0,0,20">
                <TextBlock Text="Speechmatics API Key" 
                           Foreground="#888888" 
                           FontSize="12" 
                           Margin="0,0,0,6" 
                           FontWeight="SemiBold"/>
                <TextBox x:Name="SpeechmaticsApiKeyTextBox" Width="320"/>
            </StackPanel>

            <CheckBox Grid.Row="4" 
                      x:Name="TestModeCheckBox" 
                      Content="Test Mode (Run both APIs simultaneously)" 
                      Margin="0,0,0,10"
                      HorizontalAlignment="Left"/>

            <CheckBox Grid.Row="5" 
                      x:Name="StartWithWindowsCheckBox" 
                      Content="Start with Windows" 
                      Margin="0,0,0,30"
                      HorizontalAlignment="Left"/>

            <StackPanel Grid.Row="6" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Button Content="Save" 
                        Click="SaveButton_Click" 
                        Width="140" 
                        Height="45" 
                        Background="#007ACC" 
                        Margin="0,0,15,0"/>
                <Button Content="Cancel" 
                        Click="CancelButton_Click" 
                        Width="140" 
                        Height="45"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

