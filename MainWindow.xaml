<Window x:Class="BF_STT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BF_STT"
        xmlns:vm="clr-namespace:BF_STT.ViewModels"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="BF-STT"
        Background="#1E1E1E" Foreground="White"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Topmost="True"
        ShowInTaskbar="False"
        Loaded="Window_Loaded"
        Deactivated="Window_Deactivated"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel, IsDesignTimeCreatable=False}" WindowStartupLocation="Manual">

    <Window.Resources>
        <ContextMenu x:Key="TrayMenu">
            <MenuItem Header="Settings" Command="{Binding OpenSettingsCommand}" />
            <Separator />
            <MenuItem Header="Exit" Command="{Binding CloseCommand}" />
        </ContextMenu>

        <local:LevelToScaleConverter x:Key="LevelToScaleConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <DataTemplate x:Key="HistoryTemplate">
            <Border Background="#2D2D30" CornerRadius="5" Margin="2,0,2,2" MaxHeight="250">
                <DockPanel LastChildFill="True">
                    <Grid DockPanel.Dock="Top" Margin="5">
                        <TextBlock Text="History" Foreground="#AAAAAA" FontSize="10" FontWeight="Bold" VerticalAlignment="Center"/>
                        <Button HorizontalAlignment="Right" Command="{Binding ClearHistoryCommand}" Padding="5,1" Background="Transparent" ToolTip="Clear All">
                            <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="10"/>
                        </Button>
                    </Grid>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding HistoryService.History}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#444444" BorderThickness="0,0,0,1" Padding="5,3">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss}'}" Foreground="#888888" FontSize="9"/>
                                                <TextBlock Text="{Binding Text}" Foreground="White" FontSize="11" TextWrapping="Wrap" Margin="0,1,0,0"/>
                                            </StackPanel>
                                            <Button Grid.Column="1" VerticalAlignment="Center" 
                                                    Command="{Binding DataContext.SendHistoryItemCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                                                    CommandParameter="{Binding}"
                                                    Padding="4,2" Margin="5,0,0,0"
                                                    Background="#007ACC" ToolTip="Send to last focused window">
                                                <TextBlock Text="&#xE724;" FontFamily="Segoe MDL2 Assets" FontSize="10"/>
                                            </Button>
                                            <Button Grid.Column="2" VerticalAlignment="Center" 
                                                    Command="{Binding DataContext.CopyHistoryItemCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                                                    CommandParameter="{Binding}"
                                                    Padding="4,2" Margin="5,0,0,0"
                                                    Background="#3E3E42" ToolTip="Copy to Clipboard">
                                                <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets" FontSize="10"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </DataTemplate>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Margin" Value="3,2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444444"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#2A2A2A"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="0" Background="Transparent">
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Settings" Command="{Binding Path=PlacementTarget.DataContext.OpenSettingsCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ContextMenu}}}"/>
                <Separator />
                <MenuItem Header="Exit" Command="{Binding Path=PlacementTarget.DataContext.CloseCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ContextMenu}}}"/>
            </ContextMenu>
        </Grid.ContextMenu>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Row 0: History Top -->
            <RowDefinition Height="Auto"/> <!-- Row 1: Controls & Status -->
            <RowDefinition Height="Auto"/> <!-- Row 2: Transcripts -->
            <RowDefinition Height="Auto"/> <!-- Row 3: History Bottom -->
        </Grid.RowDefinitions>

        <!-- Top History -->
        <ContentControl Grid.Row="0" Content="{Binding}" ContentTemplate="{StaticResource HistoryTemplate}" 
                        Visibility="{Binding IsHistoryTopVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <!-- Controls Row -->
        <Border Grid.Row="1" Background="#1E1E1E" Padding="5,2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Status (Compact side) -->
                <TextBlock Text="{Binding StatusText}" Foreground="#AAAAAA" FontSize="11" VerticalAlignment="Center" 
                           Margin="8,0" MaxWidth="150" TextTrimming="CharacterEllipsis" ToolTip="{Binding StatusText}"/>

                <!-- Visualizer Area -->
                <Grid Width="20" Height="24" Margin="3,0" VerticalAlignment="Center" Visibility="{Binding IsRecording, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Border Width="1.8" Height="9" Margin="0.3,0" Background="#CC3300" CornerRadius="0.9" RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleY="{Binding AudioLevel, ConverterParameter=0.8, Converter={StaticResource LevelToScaleConverter}}"/>
                            </Border.RenderTransform>
                        </Border>
                        <Border Width="2.2" Height="14" Margin="0.3,0" Background="#CC3300" CornerRadius="1.1" RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleY="{Binding AudioLevel, ConverterParameter=1.5, Converter={StaticResource LevelToScaleConverter}}"/>
                            </Border.RenderTransform>
                        </Border>
                        <Border Width="1.8" Height="9" Margin="0.3,0" Background="#CC3300" CornerRadius="0.9" RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleY="{Binding AudioLevel, ConverterParameter=0.8, Converter={StaticResource LevelToScaleConverter}}"/>
                            </Border.RenderTransform>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- API Selection -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="3,0">
                    <ComboBox ItemsSource="{Binding ConfiguredBatchApis}" SelectedItem="{Binding BatchModeApi}"
                              ToolTip="Batch API"
                              VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="0,2,2,2" Width="75" Height="30"
                              Background="#333333" Foreground="Black" BorderThickness="0" FontSize="11" />
                    <ComboBox ItemsSource="{Binding ConfiguredStreamingApis}" SelectedItem="{Binding StreamingModeApi}"
                              ToolTip="Streaming API"
                              VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="2,2,0,2" Width="75" Height="30"
                              Background="#333333" Foreground="Black" BorderThickness="0" FontSize="11" />
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Start Recording / Cancel Recording -->
                    <Button Command="{Binding StartRecordingCommand}" ToolTip="Start / Cancel Recording">
                        <Button.Content>
                            <TextBlock Text="&#xE720;" FontFamily="Segoe MDL2 Assets" FontSize="14"/> <!-- Microphone -->
                        </Button.Content>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsRecording}" Value="True">
                                        <Setter Property="Background" Value="#CC3300"/>
                                        <Setter Property="ToolTip" Value="Cancel Recording (Discard)"/>
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="14"/> <!-- X Icon for Cancel -->
                                            </Setter.Value> 
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Stop & Send (Stop Icon) -->
                    <Button Command="{Binding StopRecordingCommand}" ToolTip="Stop &amp; Send" Background="#CC3300">
                        <TextBlock Text="&#xE769;" FontFamily="Segoe MDL2 Assets" FontSize="14"/> 
                    </Button>
                    
                    <!-- Resend (Refresh/Upload Icon) -->
                    <Button Command="{Binding ResendAudioCommand}" ToolTip="Re-Send Audio" Background="#007ACC" Margin="3,2">
                        <TextBlock Text="&#xE898;" FontFamily="Segoe MDL2 Assets" FontSize="14"/> 
                    </Button>

                    <!-- History (History Icon) -->
                    <Button Command="{Binding ToggleHistoryCommand}" ToolTip="Show/Hide History" Background="#444444" Margin="3,2">
                        <TextBlock Text="&#xE81C;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Transcript Area (Hidden typically, shown in Test Mode) -->
        <Border Grid.Row="2" Background="#252526" CornerRadius="5" Padding="5">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsTestMode}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Deepgram -->
                    <DockPanel Grid.Column="0">
                        <TextBlock DockPanel.Dock="Top" Text="Deepgram" Foreground="#AAAAAA" FontSize="10" FontWeight="SemiBold" Margin="0,0,0,2"/>
                        <TextBox Text="{Binding DeepgramTranscript}" 
                                 Background="Transparent" 
                                 Foreground="White" 
                                 BorderThickness="1" BorderBrush="#444444"
                                 FontSize="10" 
                                 TextWrapping="Wrap" 
                                 IsReadOnly="True"
                                 Height="80" Width="80"
                                 VerticalScrollBarVisibility="Auto"/>
                    </DockPanel>
                    <!-- Speechmatics -->
                    <DockPanel Grid.Column="2">
                        <TextBlock DockPanel.Dock="Top" Text="Speechmatics" Foreground="#AAAAAA" FontSize="10" FontWeight="SemiBold" Margin="0,0,0,2"/>
                        <TextBox Text="{Binding SpeechmaticsTranscript}" 
                                 Background="Transparent" 
                                 Foreground="White" 
                                 BorderThickness="1" BorderBrush="#444444"
                                 FontSize="10" 
                                 TextWrapping="Wrap" 
                                 IsReadOnly="True"
                                 Height="80" Width="80"
                                 VerticalScrollBarVisibility="Auto"/>
                    </DockPanel>
                    
                    <!-- Soniox -->
                    <DockPanel Grid.Column="4">
                        <TextBlock DockPanel.Dock="Top" Text="Soniox" Foreground="#AAAAAA" FontSize="10" FontWeight="SemiBold" Margin="0,0,0,2"/>
                        <TextBox Text="{Binding SonioxTranscript}" 
                                 Background="Transparent" 
                                 Foreground="White" 
                                 BorderThickness="1" BorderBrush="#444444"
                                 FontSize="10" 
                                 TextWrapping="Wrap" 
                                 IsReadOnly="True"
                                 Height="80" Width="80"
                                 VerticalScrollBarVisibility="Auto"/>
                    </DockPanel>

                    <!-- OpenAI -->
                    <DockPanel Grid.Column="6">
                        <TextBlock DockPanel.Dock="Top" Text="OpenAI" Foreground="#AAAAAA" FontSize="10" FontWeight="SemiBold" Margin="0,0,0,2"/>
                        <TextBox Text="{Binding OpenAITranscript}" 
                                 Background="Transparent" 
                                 Foreground="White" 
                                 BorderThickness="1" BorderBrush="#444444"
                                 FontSize="10" 
                                 TextWrapping="Wrap" 
                                 IsReadOnly="True"
                                 Height="80" Width="80"
                                 VerticalScrollBarVisibility="Auto"/>
                    </DockPanel>

                    <!-- ElevenLabs -->
                    <DockPanel Grid.Column="8">
                        <TextBlock DockPanel.Dock="Top" Text="ElevenLabs" Foreground="#AAAAAA" FontSize="10" FontWeight="SemiBold" Margin="0,0,0,2"/>
                        <TextBox Text="{Binding ElevenLabsTranscript}" 
                                 Background="Transparent" 
                                 Foreground="White" 
                                 BorderThickness="1" BorderBrush="#444444"
                                 FontSize="10" 
                                 TextWrapping="Wrap" 
                                 IsReadOnly="True"
                                 Height="80" Width="80"
                                 VerticalScrollBarVisibility="Auto"/>
                    </DockPanel>

                    <!-- Google -->
                    <DockPanel Grid.Column="10">
                        <TextBlock DockPanel.Dock="Top" Text="Google" Foreground="#AAAAAA" FontSize="10" FontWeight="SemiBold" Margin="0,0,0,2"/>
                        <TextBox Text="{Binding GoogleTranscript}" 
                                 Background="Transparent" 
                                 Foreground="White" 
                                 BorderThickness="1" BorderBrush="#444444"
                                 FontSize="10" 
                                 TextWrapping="Wrap" 
                                 IsReadOnly="True"
                                 Height="80" Width="80"
                                 VerticalScrollBarVisibility="Auto"/>
                    </DockPanel>

                    <!-- AssemblyAI -->
                    <DockPanel Grid.Column="12">
                        <TextBlock DockPanel.Dock="Top" Text="AssemblyAI" Foreground="#AAAAAA" FontSize="10" FontWeight="SemiBold" Margin="0,0,0,2"/>
                        <TextBox Text="{Binding AssemblyAITranscript}" 
                                 Background="Transparent" 
                                 Foreground="White" 
                                 BorderThickness="1" BorderBrush="#444444"
                                 FontSize="10" 
                                 TextWrapping="Wrap" 
                                 IsReadOnly="True"
                                 Height="80" Width="80"
                                 VerticalScrollBarVisibility="Auto"/>
                    </DockPanel>

                    <!-- Azure -->
                    <DockPanel Grid.Column="14">
                        <TextBlock DockPanel.Dock="Top" Text="Azure" Foreground="#AAAAAA" FontSize="10" FontWeight="SemiBold" Margin="0,0,0,2"/>
                        <TextBox Text="{Binding AzureTranscript}" 
                                 Background="Transparent" 
                                 Foreground="White" 
                                 BorderThickness="1" BorderBrush="#444444"
                                 FontSize="10" 
                                 TextWrapping="Wrap" 
                                 IsReadOnly="True"
                                 Height="80" Width="80"
                                 VerticalScrollBarVisibility="Auto"/>
                    </DockPanel>
                </Grid>
                
                <!-- Loading Overlay -->
                <Grid Background="#AA000000" Visibility="{Binding IsSending, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="67" Height="3" Foreground="#007ACC" Background="#333333" BorderThickness="0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Bottom History -->
        <ContentControl Grid.Row="3" Content="{Binding}" ContentTemplate="{StaticResource HistoryTemplate}" 
                        Visibility="{Binding IsHistoryBottomVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        
        <tb:TaskbarIcon x:Name="MyNotifyIcon"
                        ToolTipText="BF-STT"
                        ContextMenu="{StaticResource TrayMenu}"/>
    </Grid>
</Window>
