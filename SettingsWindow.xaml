<Window x:Class="BF_STT.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BF_STT"
        mc:Ignorable="d"
        Title="Settings"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Background="Transparent"
        AllowsTransparency="True">
    
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderThickness="1" 
                                BorderBrush="#444444">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444444"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>

    <Border Background="#1E1E1E" 
            CornerRadius="12" 
            BorderThickness="1" 
            BorderBrush="#333333" 
            MouseLeftButtonDown="Window_MouseLeftButtonDown">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="Settings" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                <Button Width="32" 
                        Height="32" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center" 
                        ToolTip="Má»Ÿ thÆ° má»¥c chá»©a file cáº¥u hÃ¬nh"
                        Background="#333333"
                        Click="OpenConfigFolderButton_Click">
                    <TextBlock Text="ðŸ“‚" FontSize="16" Margin="0,-2,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
            </Grid>

            <!-- Row 1: APIs -->
            <Grid Grid.Row="1" Margin="0,0,0,10" Width="330">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Batch Mode API" Foreground="#888888" FontSize="12" Margin="0,0,0,6" FontWeight="SemiBold"/>
                    <ComboBox x:Name="BatchModeApiComboBox" Height="30">
                        <ComboBoxItem Content="Deepgram"/>
                        <ComboBoxItem Content="Speechmatics"/>
                        <ComboBoxItem Content="Soniox"/>
                        <ComboBoxItem Content="OpenAI Whisper"/>
                        <ComboBoxItem Content="ElevenLabs"/>
                        <ComboBoxItem Content="Google"/>
                        <ComboBoxItem Content="AssemblyAI"/>
                        <ComboBoxItem Content="Azure"/>
                    </ComboBox>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Streaming API" Foreground="#888888" FontSize="12" Margin="0,0,0,6" FontWeight="SemiBold"/>
                    <ComboBox x:Name="StreamingModeApiComboBox" Height="30">
                        <ComboBoxItem Content="Deepgram"/>
                        <ComboBoxItem Content="Speechmatics"/>
                        <ComboBoxItem Content="Soniox"/>
                        <ComboBoxItem Content="OpenAI (Unsupported)"/>
                        <ComboBoxItem Content="ElevenLabs"/>
                        <ComboBoxItem Content="Google (Unsupported)"/>
                        <ComboBoxItem Content="AssemblyAI"/>
                        <ComboBoxItem Content="Azure (Unsupported)"/>
                    </ComboBox>
                </StackPanel>
            </Grid>

            <!-- Row 2: Mic and Hotkeys -->
            <Grid Grid.Row="2" Margin="0,0,0,10" Width="330">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="75"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="75"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Microphone" Foreground="#888888" FontSize="12" Margin="0,0,0,6" FontWeight="SemiBold"/>
                    <ComboBox x:Name="MicrophoneComboBox" Height="30" />
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Hotkey" Foreground="#888888" FontSize="12" Margin="0,0,0,6" FontWeight="SemiBold"/>
                    <ComboBox x:Name="HotkeyComboBox" Height="30" />
                </StackPanel>
                <StackPanel Grid.Column="4">
                    <TextBlock Text="Stop &amp; Send" Foreground="#888888" FontSize="11" Margin="0,0,0,7" FontWeight="SemiBold" ToolTip="Stop &amp; Send Hotkey"/>
                    <ComboBox x:Name="StopAndSendHotkeyComboBox" Height="30" />
                </StackPanel>
            </Grid>

            <!-- Row 3: Language and History -->
            <Grid Grid.Row="3" Margin="0,0,0,10" Width="330">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Language" Foreground="#888888" FontSize="12" Margin="0,0,0,6" FontWeight="SemiBold"/>
                    <ComboBox x:Name="LanguageComboBox" Height="30">
                        <ComboBoxItem Content="vi" Tag="vi"/>
                        <ComboBoxItem Content="en" Tag="en"/>
                        <ComboBoxItem Content="ja" Tag="ja"/>
                        <ComboBoxItem Content="ko" Tag="ko"/>
                        <ComboBoxItem Content="zh" Tag="zh"/>
                        <ComboBoxItem Content="fr" Tag="fr"/>
                        <ComboBoxItem Content="de" Tag="de"/>
                    </ComboBox>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="History Limit" Foreground="#888888" FontSize="12" Margin="0,0,0,6" FontWeight="SemiBold"/>
                    <TextBox x:Name="MaxHistoryLimitTextBox" Height="30" Width="Auto" Padding="5,2" VerticalContentAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- API Keys -->
            <StackPanel Grid.Row="4" Margin="0,0,0,10" Width="330">
                <TextBlock Text="Deepgram API Key" Foreground="#888888" FontSize="12" Margin="0,0,0,6" FontWeight="SemiBold"/>
                <TextBox x:Name="ApiKeyTextBox" />
            </StackPanel>

            <StackPanel Grid.Row="5" Margin="0,0,0,10" Width="330">
                <TextBlock Text="Speechmatics API Key" Foreground="#888888" FontSize="12" Margin="0,0,0,6" FontWeight="SemiBold"/>
                <TextBox x:Name="SpeechmaticsApiKeyTextBox" />
            </StackPanel>

            <StackPanel Grid.Row="6" Margin="0,0,0,10" Width="330">
                <TextBlock Text="Soniox API Key" Foreground="#888888" FontSize="12" Margin="0,0,0,6" FontWeight="SemiBold"/>
                <TextBox x:Name="SonioxApiKeyTextBox" />
            </StackPanel>

            <StackPanel Grid.Row="7" Margin="0,0,0,10" Width="330">
                <TextBlock Text="OpenAI API Key" Foreground="#888888" FontSize="12" Margin="0,0,0,6" FontWeight="SemiBold"/>
                <TextBox x:Name="OpenAIApiKeyTextBox" />
            </StackPanel>

            <StackPanel Grid.Row="8" Margin="0,0,0,10" Width="330">
                <TextBlock Text="ElevenLabs API Key" Foreground="#888888" FontSize="12" Margin="0,0,0,6" FontWeight="SemiBold"/>
                <TextBox x:Name="ElevenLabsApiKeyTextBox" />
            </StackPanel>

            <StackPanel Grid.Row="9" Margin="0,0,0,10" Width="330">
                <TextBlock Text="Google API Key" Foreground="#888888" FontSize="12" Margin="0,0,0,6" FontWeight="SemiBold"/>
                <TextBox x:Name="GoogleApiKeyTextBox" />
            </StackPanel>

            <StackPanel Grid.Row="10" Margin="0,0,0,10" Width="330">
                <TextBlock Text="AssemblyAI API Key" Foreground="#888888" FontSize="12" Margin="0,0,0,6" FontWeight="SemiBold"/>
                <TextBox x:Name="AssemblyAIApiKeyTextBox" />
            </StackPanel>

            <StackPanel Grid.Row="11" Margin="0,0,0,20" Width="330">
                <TextBlock Text="Azure Speech Key" Foreground="#888888" FontSize="12" Margin="0,0,0,6" FontWeight="SemiBold"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="AzureApiKeyTextBox" Grid.Column="0" />
                    <TextBox x:Name="AzureRegionTextBox" Grid.Column="2" ToolTip="Region (e.g. eastus)" />
                </Grid>
            </StackPanel>

            <CheckBox Grid.Row="12" 
                      x:Name="TestModeCheckBox" 
                      Content="Test Mode (Run both APIs simultaneously)" 
                      Margin="0,0,0,10"
                      HorizontalAlignment="Left"/>

            <CheckBox Grid.Row="13" 
                      x:Name="AutoCheckUpdateCheckBox" 
                      Content="Tá»± Ä‘á»™ng kiá»ƒm tra phiÃªn báº£n má»›i" 
                      Margin="0,0,0,10"
                      HorizontalAlignment="Left"/>

            <CheckBox Grid.Row="14" 
                      x:Name="NoiseSuppressionCheckBox" 
                      Content="Noise Suppression (RNNoise)" 
                      Margin="0,0,0,10"
                      HorizontalAlignment="Left"/>

            <CheckBox Grid.Row="15" 
                      x:Name="StartWithWindowsCheckBox" 
                      Content="Start with Windows" 
                      Margin="0,0,0,30"
                      HorizontalAlignment="Left"/>

            <StackPanel Grid.Row="16" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Button Content="Save" 
                        Click="SaveButton_Click" 
                        Width="140" 
                        Height="45" 
                        Background="#007ACC" 
                        Margin="0,0,15,0"/>
                <Button Content="Cancel" 
                        Click="CancelButton_Click" 
                        Width="140" 
                        Height="45"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

